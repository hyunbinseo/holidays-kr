{
	"compilerOptions": {
		"strict": true,
		"module": "NodeNext",
		"moduleResolution": "NodeNext",
		"resolveJsonModule": true,

		"noEmit": true,
		"allowImportingTsExtensions": true,

		"target": "ES2022", // Node.js 18 LTS supports all ES2022 APIs.
		"lib": ["ES2022"], // Reference https://node.green/#ES2022

		"allowJs": true,
		"checkJs": true,
		"outDir": "dist" // tsup default output directory
	},
	"include": ["src"]
}
